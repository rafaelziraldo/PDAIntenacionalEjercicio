@model PDAIntenacionalEjercicio.Models.Profesor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Carga Profesor</h4>
<hr />
@using (Html.BeginForm("Create", "Profesor", FormMethod.Post))
{
    <form>
        <div class="mb-3 ">

            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre, String.Empty, new { @class = "help-inline", @style = "color:red" })

        </div>
        <div class="mb-3 ">

            @Html.LabelFor(model => model.Apellido, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apellido, String.Empty, new { @class = "help-inline", @style = "color:red" })

        </div>
        <div class="mb-3 ">

            @Html.LabelFor(model => model.DNI, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.DNI, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DNI, String.Empty, new { @class = "help-inline", @style = "color:red" })

        </div>
        <div class="mb-3 ">

            @Html.LabelFor(model => model.FechaDeNacimiento, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.FechaDeNacimiento, new { @class = "form-control", @type = "date", @Value = Model.FechaDeNacimiento.ToString("yyyy-MM-dd") })
            @Html.ValidationMessageFor(model => model.FechaDeNacimiento, String.Empty, new { @class = "help-inline", @style = "color:red" })

        </div>

        <div class="mb-3 ">

            @Html.LabelFor(model => model.Sexo, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Sexo, new List<SelectListItem>
                    { new SelectListItem{Text="Masculino", Value="M"},
                      new SelectListItem{Text="Femenino", Value="F"}}, "Selecionar uno", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sexo, String.Empty, new { @class = "help-inline", @style = "color:red" })

        </div>


        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
}




